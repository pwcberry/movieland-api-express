{
  "env": {
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "globals": {
    "PORT": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": "off",
    "comma-spacing": [
      1,
      {
        "after": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "eol-last": [
      1,
      "always"
    ]
  }
}
