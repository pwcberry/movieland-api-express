{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2019",
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext"
    ],
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "jest"
    ],
    "outDir": "lib/",
    "declaration": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./test/**/*.ts",
    "./test/**/*.spec.ts"
  ]
}
